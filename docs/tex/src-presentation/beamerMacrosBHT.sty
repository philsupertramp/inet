\newcommand{\changeblockcolor}[1]
    {
      \ifthenelse{\equal{#1}{default}}
        {
          \setbeamercolor{block title}{bg=HKS51}
          \setbeamercolor{block body}{bg=HKS51!25} 
        }
        {
          \setbeamercolor{block title}{bg=#1}
          \setbeamercolor{block body}{bg=#1!60} 
        }
    }



