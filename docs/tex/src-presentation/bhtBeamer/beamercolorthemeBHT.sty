%% Colors and fonts
%%

\xdefinecolor{FGtext}{RGB}{0,0,0}

%\setbeamercolor{structure}{fg=FGtext}
\setbeamercolor{structure}{fg=bhtBlue}  %itemize, chaptertoc
\setbeamercolor{author}{parent=structure}
\setbeamercolor{frametitle}{fg=FGtext, bg=bhtGray!5}
\setbeamercolor{author in sidebar}{fg=bhtGray}
\setbeamercolor{titlepage}{bg=white}

%% Palette 
\setbeamercolor{palette primary}{fg=FGtext,bg=red}%bg=HKS51!20}
\setbeamercolor{palette secondary}{fg=FGtext,bg=bhtBlue!80}
\setbeamercolor{palette tertiary}{fg=FGtext,bg=bhtBlue!90}
\setbeamercolor{palette quaternary}{fg=FGtext,bg=bhtYellow}
\setbeamercolor{titlelike}{parent=palette quaternary}

%% Palette Sidebar
\setbeamercolor{sidebar right}{bg=bhtGray!15}
\setbeamercolor{palette sidebar primary}{fg=bhtGray!85}
\setbeamercolor{palette sidebar secondary}{fg=bhtGray!85}
\setbeamercolor{palette sidebar tertiary}{fg=FGtext!75}
\setbeamercolor{palette sidebar quaternary}{fg=FGtext}
\setbeamercolor{sidebar}{bg=bhtYellow!10}  % highlighted chapter
  
%% Blocks
\setbeamercolor{block title}{fg=white,bg=bhtBlue}
\setbeamercolor{block title alerted}{use=alerted text,fg=FGtext,bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{fg=FGtext,bg=bhtYellow}
%\setbeamercolor{block title example}{use=example text,fg=FGtext,bg=example text.fg!75!bg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{alerted text}{fg=azRed1}

%% fonts and appearance
\setbeamerfont{title}{series=\bfseries,size=\LARGE}
\setbeamerfont{title in sidebar}{series=\bfseries}
\setbeamerfont{author in sidebar}{size=\tiny}%,series=\bfseries}
\setbeamerfont*{item}{series=}
\setbeamerfont{frametitle}{size=\small}
\setbeamerfont{block title}{size=\small}
\setbeamerfont{subtitle}{size=\large,series=\normalfont}

