    \begin{algorithmic}[1]
        \STATE Erstelle Trigram-Simularitäten
        \STATE Suche nach Ergebnissen mit Regex
        \STATE Suche nach exakten Ergebnissen
        \STATE Skaliere Suchergebnisse {$S_i$} mit sinnvollen Gewichten $G$
        \STATE $S = \max(S_i)$
        \STATE Filtere alle Einträge nach $S \geq \min(G)$
        \STATE Sortiere die Ergebnisse absteigend nach $S$
